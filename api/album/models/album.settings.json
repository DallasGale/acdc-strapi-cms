{
  "connection": "default",
  "collectionName": "albums",
  "info": {
    "name": "album"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "europeanReleaseDate": {
      "type": "date"
    },
    "australianReleaseDate": {
      "type": "date"
    },
    "songs": {
      "collection": "song"
    },
    "isStudioRecording": {
      "type": "boolean",
      "default": false
    },
    "isLiveRecording": {
      "type": "boolean",
      "default": false
    },
    "isInternationalVersion": {
      "type": "boolean",
      "default": false
    },
    "isAustralianVersion": {
      "type": "boolean",
      "default": false
    },
    "isCompilation": {
      "type": "boolean",
      "default": false
    },
    "isSoundtrack": {
      "type": "boolean",
      "default": false
    },
    "coverArt": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "sideA": {
      "type": "component",
      "repeatable": true,
      "component": "long-play-format.side-a"
    },
    "sideB": {
      "type": "component",
      "repeatable": true,
      "component": "long-play-format.side-a"
    }
  }
}
