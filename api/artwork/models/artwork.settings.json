{
  "connection": "default",
  "collectionName": "artworks",
  "info": {
    "name": "artwork"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "artist": {
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "string"
    },
    "isFrontCover": {
      "type": "boolean"
    },
    "isBackCover": {
      "type": "boolean"
    },
    "isInside": {
      "type": "boolean"
    },
    "album": {
      "model": "album"
    }
  }
}
