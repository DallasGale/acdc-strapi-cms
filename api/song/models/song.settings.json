{
  "connection": "default",
  "collectionName": "songs",
  "info": {
    "name": "song"
  },
  "options": {
    "increments": true,
    "timestamps": false
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "length": {
      "type": "string",
      "default": "00:MM:SS:000",
      "minLength": 12,
      "maxLength": 12
    },
    "single": {
      "type": "boolean",
      "default": false
    },
    "albums": {
      "collection": "album"
    },
    "writers": {
      "collection": "writer"
    },
    "albumSingle": {
      "type": "component",
      "repeatable": true,
      "component": "single-release.album-single"
    }
  }
}
